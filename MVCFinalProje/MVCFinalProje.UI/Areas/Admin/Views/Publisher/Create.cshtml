@model MVCFinalProje.UI.Models.PublisherVM.AdminPublisherCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create Publisher</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="form-floating">
                    <input type="text" asp-for="Name" class="form-control" id="floatingName" placeholder="Name" />
                    <label for="floatingName">Name</label>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <div class="form-floating">
                    <input type="text" asp-for="Address" class="form-control" id="floatingName" placeholder="Address" />
                    <label for="floatingName">Address</label>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


